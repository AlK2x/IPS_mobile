<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:id="@+id/progressTwo"
            app:layout_constraintStart_toEndOf="@+id/runTwoBtn" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/runTwoBtn" app:layout_constraintTop_toTopOf="@+id/runTwoBtn"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:id="@+id/progressThree"
            app:layout_constraintStart_toEndOf="@+id/runThreeBtn" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/runThreeBtn"
            app:layout_constraintTop_toTopOf="@+id/runThreeBtn"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="TRIPLE EXECUTE"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tripleCookingTextView"
            android:textSize="36sp"
            android:textStyle="bold" android:textAlignment="center" android:textColor="@color/textPrimary"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/runOneBtn"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Run"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/runOneBtn" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/runTwoBtn"/>
    <Button
            android:text="Run"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/runTwoBtn" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/runThreeBtn"/>
    <Button
            android:text="Run"
            android:layout_width="wrap_content"
            android:id="@+id/runThreeBtn" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content" android:layout_marginBottom="220dp"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:id="@+id/progressOne"
            app:layout_constraintStart_toEndOf="@+id/runOneBtn" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/runOneBtn" app:layout_constraintTop_toTopOf="@+id/runOneBtn"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>